<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<body>
    <nav class="navbar">
        <div class="container">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="navbar-brand" href="#">Home</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">Login</a>
                </li>
            </ul>
        </div>
    </nav>
    

    <div class="container mt-4">
        <div class="row">
            <div class="col-8">
                <h2>Tus gimansios pokemon</h2>
            </div>
            <div class="dropdown filter">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Filter
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <form class="form">
                        <div class="form-group">
                        <label>Tipo</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="fire">
                            <label class="form-check-label" for="fire">
                            Fuego
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="water">
                            <label class="form-check-label" for="water">
                            Agua
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="air">
                            <label class="form-check-label" for="air">
                            Aire
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="dirt">
                            <label class="form-check-label" for="dirt">
                            Tierra
                            </label>
                        </div>
                        </div>
                        <div class="form-group">
                        <label>Score</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="score5">
                            <label class="form-check-label" for="score5">
                                ★★★★★
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="score4">
                            <label class="form-check-label" for="score4">
                                ★★★★☆
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="score3">
                            <label class="form-check-label" for="score3">
                                ★★★☆☆
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="score2">
                            <label class="form-check-label" for="score2">
                                ★★☆☆☆
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="score1">
                            <label class="form-check-label" for="score1">
                                ★☆☆☆☆
                            </label>
                        </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Apply</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-3">
        <div class="row">
            <% users.forEach(function(user) { %>
                <div class="col-md-3 mb-3">
                    <div class="card">
                        <% if(pokemon.image) { %>
                            <img src="data:image/png;base64,<%= user.userImg.toString('base64') %>" class="card-img-top" loading="lazy">
                        <% } else { %>
                            No Image
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= pokemon.name %></h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="card-text mb-0"><%= pokemon.score %></p>
                                <p class="card-text mb-0"><%= pokemon.type %></p>
                                <button class="btn btn-outline-primary like-button">+</button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

</body>

<footer>
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>
